<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/background"
    tools:context=".View.activity.SplashActivity">

    <TextView
        android:id="@+id/splash_activity_lbl_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/splash_libs_lbl"
        android:textColor="@color/gold"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/splash_activity_videos_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/splash_activity_books_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/splash_libs_btn_background"
        android:text="@string/readable_books"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/splash_libraries_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/splash_libraries_btn"
        app:layout_constraintTop_toTopOf="@+id/splash_activity_videos_btn" />

    <Button
        android:id="@+id/splash_activity_videos_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/splash_libs_btn_background"
        android:text="@string/watchable_videos"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/splash_libraries_btn"
        app:layout_constraintEnd_toStartOf="@+id/splash_libraries_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/splash_libraries_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/splash_libs_btn_background"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="visible"
        android:elevation="4dp"
        android:text="@string/intro"
        app:layout_constraintBottom_toTopOf="@+id/splash_activity_new_problem_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/splash_activity_new_problem_btn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginBottom="?actionBarSize"
        android:background="@drawable/splash_libs_btn_background"
        android:elevation="4dp"
        android:text="@string/new_problem"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>