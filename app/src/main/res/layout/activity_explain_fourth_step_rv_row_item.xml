<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/AEFSRI_group_name_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/group"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AEFSRI_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="الأبناء"
        android:textColor="@color/color_red"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_group_name_lbl"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_group_name_col_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/colom"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_group_name"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_boys_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="3 ابناء"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_group_name_col_lbl"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_plus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/plus"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_boys_title"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_girls_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="بنتان"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_plus"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_equal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/equal"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_girls_title"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_right_brackets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/right_brackets"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_equal"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_boys_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="3 x 2"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_right_brackets"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_left_brackets"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/left_brackets"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_boys_count"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_plus_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/plus"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_left_brackets"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_girls_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="2"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_plus_2"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_equal_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/equal"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_girls_count"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_group_total_count_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="8"
        android:gravity="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_equal_2"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_group_heads_count_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="@string/heads_count"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/AEFSRI_group_total_count_result"
        app:layout_constraintTop_toTopOf="@id/AEFSRI_group_name_lbl" />

    <TextView
        android:id="@+id/AEFSRI_boys_share_value_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/step_two_lbl_1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/AEFSRI_boys_title"
        app:layout_constraintTop_toTopOf="@+id/boys_original_share_percent_layout"
        app:layout_constraintBottom_toBottomOf="@+id/boys_original_share_percent_layout"/>

    <TextView
        android:id="@+id/AEFSRI_boy_relation_share_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/son"
        android:textStyle="bold"
        android:textColor="@color/color_red"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_boys_share_value_lbl"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_boys_share_value_lbl" />

    <TextView
        android:id="@+id/AEFSRI_equal_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/equal"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_boy_relation_share_lbl"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_boys_share_value_lbl" />

    <LinearLayout
        android:id="@+id/boys_original_share_percent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_equal_3"
        app:layout_constraintTop_toBottomOf="@+id/AEFSRI_boys_title">

        <TextView
            android:id="@+id/AEFSRI_boy_percent_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/AEFSRI_boy_percent_denominator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="24"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/AEFSRI_multiply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/multiply"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/boys_original_share_percent_layout"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_boys_share_value_lbl"
        app:layout_constraintBottom_toBottomOf="@+id/AEFSRI_boys_share_value_lbl"/>

    <LinearLayout
        android:id="@+id/boys_multiply_percent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="4dp"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_multiply"
        app:layout_constraintTop_toTopOf="@+id/boys_original_share_percent_layout">

        <TextView
            android:id="@+id/AEFSRI_boys_multiply_percent_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/AEFSRI_boys_multiply_percent_denominator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="24"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/AEFSRI_equal_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/equal"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/boys_multiply_percent_layout"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_multiply" />

    <LinearLayout
        android:id="@+id/boys_multiply_percent_result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_white_rect_with_brown_borders"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_equal_4"
        app:layout_constraintTop_toTopOf="@+id/boys_original_share_percent_layout">

        <TextView
            android:id="@+id/AEFSRI_boys_multiply_percent_result_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/color_red"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/color_red" />

        <TextView
            android:id="@+id/AEFSRI_boys_multiply_percent_result_denominator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="24"
            android:textColor="@color/color_red"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/AEFSRI_girls_share_value_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/step_two_lbl_1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/AEFSRI_boys_share_value_lbl"
        app:layout_constraintTop_toTopOf="@+id/girls_original_share_percent_layout"
        app:layout_constraintBottom_toBottomOf="@+id/girls_original_share_percent_layout"/>

    <TextView
        android:id="@+id/AEFSRI_girls_relation_share_lbl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/daughter"
        android:textStyle="bold"
        android:textColor="@color/color_red"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_girls_share_value_lbl"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_girls_share_value_lbl" />

    <TextView
        android:id="@+id/AEFSRI_equal_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="@string/equal"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_girls_relation_share_lbl"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_girls_share_value_lbl" />

    <LinearLayout
        android:id="@+id/girls_original_share_percent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/boys_original_share_percent_layout"
        app:layout_constraintTop_toBottomOf="@+id/boys_original_share_percent_layout">

        <TextView
            android:id="@+id/AEFSRI_girl_percent_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/AEFSRI_girl_percent_denominator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="24"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/AEFSRI_multiply_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/multiply"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/girls_original_share_percent_layout"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_girls_share_value_lbl"
        app:layout_constraintBottom_toBottomOf="@+id/AEFSRI_girls_share_value_lbl"/>

    <LinearLayout
        android:id="@+id/girls_multiply_percent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_multiply_2"
        app:layout_constraintTop_toTopOf="@+id/girls_original_share_percent_layout">

        <TextView
            android:id="@+id/AEFSRI_girls_multiply_percent_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/dark_grey" />

        <TextView
            android:id="@+id/AEFSRI_girls_multiply_percent_denominator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="24"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/AEFSRI_equal_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/equal"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/girls_multiply_percent_layout"
        app:layout_constraintTop_toTopOf="@+id/AEFSRI_multiply_2" />

    <LinearLayout
        android:id="@+id/girls_multiply_percent_result_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_white_rect_with_brown_borders"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/AEFSRI_equal_6"
        app:layout_constraintTop_toTopOf="@+id/girls_original_share_percent_layout">

        <TextView
            android:id="@+id/AEFSRI_girls_multiply_percent_result_numerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/color_red"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/color_red" />

        <TextView
            android:id="@+id/AEFSRI_girls_multiply_percent_result_denominator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="24"
            android:textColor="@color/color_red"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/girls_original_share_percent_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/dark_grey"/>
</androidx.constraintlayout.widget.ConstraintLayout>